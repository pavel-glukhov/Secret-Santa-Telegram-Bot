# --- SECURITY ---
# Base64-encoded 32-byte key. Generate using: python manage.py generate_key
ENCRYPT_SECRET_KEY=

# --- TELEGRAM BOT SETTINGS ---
# Bot token provided by @BotFather
TELEGRAM_TOKEN=
# Bot username (e.g., bot_login_name)
TELEGRAM_LOGIN=bot_login_name
# Support contact displayed on the 'About' page
SUPPORT_ACCOUNT=my_telegram_account

# --- ROOM CONFIGURATION ---
# Length of the generated room ID. Allowed values: 5, 6, 7, 8
ROOM_NUMBER_LENGTH=6
# Maximum number of rooms a single user can create
USER_ROOMS_LIMIT=3

# --- DATABASE (PostgreSQL) ---
# Use 'db' if running inside Docker (matches the service name in docker-compose)
# Use 'localhost' if running the app locally outside of Docker
DATABASE_NAME=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_PORT=5432
DATABASE_HOST=db
# Number of permanent connections in the pool
POOL_SIZE=5
# Maximum number of additional temporary connections allowed
MAX_OVERFLOW=10

# --- REDIS ---
# Hostname 'redis' refers to the Docker service name defined in docker-composeREDIS_DB=0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# --- WEBHOOK & SSL (Certbot) ---
# Domain name for webhook setup (exclude http/https)
DOMAIN_NAME=example.com
# Email address for SSL certificates (required for webhook mode)
EMAIL=example@mail.com
# Use empty value for production or "--staging" for testing
CERTBOT_ENV=

# --- SYSTEM SETTINGS ---
# Default server timezone
SERVER_TIMEZONE=Asia/Almaty